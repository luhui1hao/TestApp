<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/qb_px_100"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_text_color"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="Fund1"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_gains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/home_red"
        tools:text="0.00%"
        android:textSize="28sp"
        android:layout_marginTop="@dimen/qb_px_10" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_description_text_color"
        android:textSize="@dimen/common_description_text_size"
        tools:text="Gains in the past year"
        android:maxLines="2"
        android:layout_marginTop="@dimen/qb_px_10"
        android:ellipsize="end" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="@dimen/qb_px_95"
        android:layout_height="@dimen/qb_px_40"
        android:background="@drawable/bg_common_button"
        android:text="@string/home_buy"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/qb_px_10"
        android:textColor="@color/common_btn_text_color"
        android:textSize="17sp"
        style="?android:attr/borderlessButtonStyle"/>
</LinearLayout>